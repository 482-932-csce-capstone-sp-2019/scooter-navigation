<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsTab">

    <LinearLayout
        android:id="@+id/vButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/connectLeftButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect Left" />

        <Button
            android:id="@+id/conenctRightButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect Right" />

        <Button
            android:id="@+id/vLeftButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibrate Left" />

        <Button
            android:id="@+id/vRightButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibrate Right" />
    </LinearLayout>

</FrameLayout>